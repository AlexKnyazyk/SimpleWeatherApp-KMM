<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_main_tab">

    <fragment
        android:id="@+id/fragment_main_tab"
        android:name="com.simple.weather.app.android.presentation.ui.main.MainTabFragment"
        android:label="MainTabFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/navigate_to_search"
            app:destination="@id/fragment_search" />

        <action
            android:id="@+id/navigate_to_settings"
            app:destination="@id/fragment_settings" />

    </fragment>

    <fragment
        android:id="@+id/fragment_search"
        android:name="com.simple.weather.app.android.presentation.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/fragment_settings"
        android:name="com.simple.weather.app.android.presentation.ui.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />

</navigation>